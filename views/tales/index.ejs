<div class="text-center">
<a href="/tales/new"><button type="button">Crear pregunta</button></a>
<div class="search">
<form method="get" action="/tales/">
    <input type="text" name="search" value="Palabra/s"/>
    <input type="submit" value="Buscar">
    </form>
</div>
<div class="text-center">
<table class="table table-striped table-bordered">
	<% var i; for(i=0; i<questions.length; i++){ %>
     <tr><td><a href="<%= questions[i].id %>"><%= questions[i].pregunta %>&nbsp;</a><a href="<%= questions[i].id %>/editquestion"><i class="fa fa-wrench fa-fw"></i>&nbsp;</a>
      <form method="post" action="<%= questions[i].id %>?_method=delete">
      <button type="submit" class="borrar" onClick="return confirm('Seguro que quieres borrar... <%= questions[i].pregunta %>');">
      <a href="javascript:document.insert.submit"><i class="fa fa-eraser fa-fw"></i></a>
      </button>
      </form>
     </td>
     </tr>
     <% } %>

</table>
</div>
</div>